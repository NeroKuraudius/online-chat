<div id="sign-page">
  <div id="signin-side">
    <form id="signin" action="/signin" method="POST">
      <h3>登入</h3>
      <input class="mt-3" type="text" name="account" maxlength="30" placeholder="帳號" required>
      <br/>
      <input class="mt-3" type="password" name="password" maxlength="16" placeholder="密碼" required>
      <br/>
      <input class="btn btn-outline-dark mt-3" type="submit">
    </form>
  </div>

  <div id="line"></div>

  <div id="signup-side">
    <form id="signup" action="/signup" method="POST">
      <h3>註冊</h3>
      <input type="text" name="account" maxlength="30" placeholder="帳號" required>
      <br/>
      <input class="mt-3" type="text" name="name" maxlength="30" placeholder="名稱" required>
      <br />
      <input class="mt-3" type="password" name="password" maxlength="16" placeholder="密碼" required>
      <br/>
      <input class="mt-3" type="password" name="passwordCheck" maxlength="16" placeholder="確認密碼" required>
      <br/>
      <input class="btn btn-outline-dark mt-3" type="submit">
      <hr />
      <h6>或用以下方式登入</h6>
      <div class="mt-3" id="third-login">
        <a id="meta" href="#"><i class="fa-brands fa-meta fa-lg mx-2" style="color: #92457d;"></i></a>
        <a id="google" href="#"><i class="fa-brands fa-google fa-lg mx-2" style="color: #df1616;"></i></a>
        <a id="github" href="#"><i class="fa-brands fa-github fa-lg mx-2" style="color: #1f5127;"></i></a>
      </div>
    </form>
  </div>
</div>